.loading3 {
  width: 150px;
  height: 15px;
  margin: 0 auto;
  margin-top: 100px;
  display: flex;
  justify-content: space-around;
}

.loading3 text {
  width: 15px;
  height: 15px;
  border-radius: 50%;
  background: lightgreen;
  -webkit-animation: load 1.04s ease infinite;
}

@-webkit-keyframes load {
  0% {
    opacity: 1;
  }
  

  100% {
    opacity: 0;
  }
}

.loading3 text:nth-child(1) {
  -webkit-animation-delay: 0.13s;
}

.loading3 text:nth-child(2) {
  -webkit-animation-delay: 0.26s;
}

.loading3 text:nth-child(3) {
  -webkit-animation-delay: 0.39s;
}

.loading3 text:nth-child(4) {
  -webkit-animation-delay: 0.52s;
}

.loading3 text:nth-child(5) {
  -webkit-animation-delay: 0.65s;
}
